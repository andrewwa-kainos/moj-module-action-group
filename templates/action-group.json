{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "groupName": {
      "type": "string"
    },
    "groupShortName": {
      "type": "string"
    },
    "alertEmailReceivers": {
      "type": "array"
    },
    "alertSmsReceivers": {
      "type": "array"
    },
    "alertWebhookReceivers": {
      "type": "array"
    }
  },
  "resources": [
    {
      "name": "[parameters('groupName')]",
      "type": "microsoft.insights/actionGroups",
      "apiVersion": "2017-04-01",
      "location": "[parameters('location')]",
      "tags": {},
      "properties": {
        "groupShortName": "[parameters('groupShortName')]",
        "enabled": true,
        "copy": [
          {
            "name": "emailReceivers",
            "count": "${length(split(',', parameters('alertEmailReceivers')['names']))}",
            "input": {
              "name": "[parameters('alertEmailReceivers')[copyIndex('emailReceivers')].name]",
              "emailAddress": "[parameters('alertEmailReceivers')[copyIndex('emailReceivers')].emailAddress]"
            }
          },
          {
            "name": "smsReceivers",
            "count": "[length(parameters('alertSmsReceivers'))]",
            "input": {
              "name": "[parameters('alertSmsReceivers')[copyIndex('smsReceivers')].name]",
              "countryCode": "[parameters('alertSmsReceivers')[copyIndex('smsReceivers')].countryCode]",
              "phoneNumber": "[parameters('alertSmsReceivers')[copyIndex('smsReceivers')].phoneNumber]"
            }
          },
          {
            "name": "webhookReceivers",
            "count": "[length(parameters('alertWebhookReceivers'))]",
            "input": {
              "name": "[parameters('alertWebhookReceivers')[copyIndex('webhookReceivers')].name]",
              "serviceUri": "[parameters('alertWebhookReceivers')[copyIndex('webhookReceivers')].serviceUri]"
            }
          }
        ]
      }
    }
  ]
}