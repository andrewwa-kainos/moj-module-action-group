{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "groupName": {
      "type": "string"
    },
    "groupShortName": {
      "type": "string"
    },
    "alertEmailReceivers": {
      "type": "array"
    },
    "alertSmsReceivers": {
      "type": "array"
    },
    "alertWebhookReceivers": {
      "type": "array"
    }
  },
  "resources": [
    {
      "name": "[parameters('groupName')]",
      "type": "microsoft.insights/actionGroups",
      "apiVersion": "2017-04-01",
      "location": "[parameters('location')]",
      "tags": {},
      "properties": {
        "groupShortName": "[parameters('groupShortName')]",
        "enabled": true,
        "copy": [
          {
            "name": "emailReceivers",
            "count": "${length(split(',', parameters('alertEmailReceivers')[copyIndex('emailReceivers')].names))}",
            "input": {
              "name": "${element(split(',', parameters('alertEmailReceivers')[copyIndex('emailReceivers')].names), count.index)}",
              "emailAddress": "${element(split(',', parameters('alertEmailReceivers')[copyIndex('emailReceivers')].emails), count.index)}"
            }
          }
        ]
      }
    }
  ]
}